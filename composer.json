{
    "name": "portrino/typo3-whoops",
    "description": "Whoops error/ exception handler for TYPO3 projects",
    "keywords": [
        "TYPO3",
        "Whoops",
        "error",
        "handling"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Axel BÃ¶swetter",
            "email": "boeswetter@portrino.de",
            "homepage": "http://www.portrino.de",
            "role": "Developer"
        }
    ],
    "require": {
        "typo3/cms": "^7.6 || ^8.7",
        "filp/whoops": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "helhum/typo3-console": "^4.9",
        "typo3/cms": "^7.6"
    },
    "autoload": {
        "psr-4": {
            "Portrino\\Typo3Whoops\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Portrino\\Typo3Whoops\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": ".build/bin",
        "vendor-dir": ".build/vendor"
    },
    "extra": {
        "helhum/typo3-console": {
            "install-binary": false,
            "install-extension-dummy": false
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".build/web"
        }
    }
}
